pipeline { 
    agent any  
    environment {
        def mvn = "/home/pi/apache-maven/bin/mvn"
    }
    stages { 
        stage(' Compile') { 
            steps { 
            	dir("ftvRESTful"){
					sh '${mvn} clean install'
 				}
            }
        }
        stage('Deploy to Tomcat'){
			steps{
            	dir("ftvRESTful"){
	            	sh '${mvn} tomcat8:redeploy -Dhostname=ftvlogger -Dport=8080 -DserverName=ftvTomcatServer'   
	            } 
			}
        }
    }
    
}